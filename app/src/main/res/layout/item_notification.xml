<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivNotiPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="@dimen/search_icon_padding"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/bb_default_elevation">

        <TextView
            android:id="@+id/tvNotiTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABCASDQWFSDGDFG"
            android:textSize="15sp"
            android:paddingTop="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/tvNotiTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 min ago."
                android:textColor="@color/clGray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>